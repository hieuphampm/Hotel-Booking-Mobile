<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:padding="16dp"
    tools:context=".FirstPaymentActivity">

    <!-- Header Section -->
    <TextView
        android:id="@+id/tv_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hotel_name"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/tealBlue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp" />

    <!-- Booking Details -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        android:background="#ffffff"
        app:layout_constraintTop_toBottomOf="@id/tv_header"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Date Info -->
        <TextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/date_info"
            android:textSize="16sp"
            android:textColor="@color/darkJungleGreen" />

        <!-- Room Details -->
        <TextView
            android:id="@+id/tv_room_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/room_details"
            android:textSize="16sp"
            android:textColor="@color/richBlackGreenishTint" />

        <!-- Bed Info -->
        <TextView
            android:id="@+id/tv_bed_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/bed_info"
            android:textSize="16sp"
            android:textColor="@color/deepAquamarine" />

        <!-- No Smoking Info -->
        <TextView
            android:id="@+id/tv_no_smoking"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/no_smoking"
            android:textSize="16sp"
            android:textColor="@color/tealBlue" />

        <!-- Meal Info -->
        <TextView
            android:id="@+id/tv_meal_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/meal_info"
            android:textSize="16sp"
            android:textColor="@color/gray" />

        <!-- Non-Refundable Info -->
        <TextView
            android:id="@+id/tv_non_refundable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/non_refundable"
            android:textSize="16sp"
            android:textColor="@android:color/holo_red_dark" />

        <!-- Payment Info -->
        <TextView
            android:id="@+id/tv_payment_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/payment_info"
            android:textSize="16sp"
            android:textColor="@color/primary" />

        <!-- Payment Amount -->
        <TextView
            android:id="@+id/tv_payment_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/payment_amount"
            android:textSize="16sp"
            android:textColor="@color/primary_dark" />

    </LinearLayout>

    <!-- Customer Notes Section -->
    <TextView
        android:id="@+id/tv_customer_notes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/customer_notes"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/darkJungleGreen"
        android:layout_marginTop="16dp" />

    <EditText
        android:id="@+id/et_customer_notes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/enter_notes"
        android:textSize="16sp"
        android:background="@drawable/edit_text_border"
        android:padding="10dp"
        android:layout_marginBottom="16dp" />

    <!-- Customer Requests Section -->
    <TextView
        android:id="@+id/tv_customer_requests"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/customer_requests"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/darkJungleGreen"
        android:layout_marginTop="8dp" />

    <!-- Checkboxes for customer requests -->
    <CheckBox
        android:id="@+id/cb_near_elevator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/near_elevator"
        android:textSize="16sp"
        android:textColor="@color/richBlackGreenishTint" />

    <CheckBox
        android:id="@+id/cb_far_from_elevator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/far_from_elevator"
        android:textSize="16sp"
        android:textColor="@color/richBlackGreenishTint" />

    <CheckBox
        android:id="@+id/cb_non_smoking"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/non_smoking_request"
        android:textSize="16sp"
        android:textColor="@color/tealBlue" />

    <CheckBox
        android:id="@+id/cb_no_corner_room"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/no_corner_room"
        android:textSize="16sp"
        android:textColor="@color/tealBlue" />

    <CheckBox
        android:id="@+id/cb_soundproof_room"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/soundproof_room"
        android:textSize="16sp"
        android:textColor="@color/tealBlue" />

    <CheckBox
        android:id="@+id/cb_high_floor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/high_floor"
        android:textSize="16sp"
        android:textColor="@color/tealBlue" />

    <!-- Book Now Button -->
    <Button
        android:id="@+id/btn_book_now"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/book_now"
        android:textSize="18sp"
        android:textColor="@android:color/white"
        android:background="@color/primary"
        app:layout_constraintTop_toBottomOf="@id/cb_high_floor"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>

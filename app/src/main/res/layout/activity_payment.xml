<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/payment_title"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="@color/lightSteelTeal"
            android:paddingBottom="16dp" />

        <TextView
            android:id="@+id/tvPaymentAmount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Amount to Pay: $0.00"
            android:textSize="18sp"
            android:textColor="@color/tealBlue"
            android:gravity="center"
            android:layout_marginBottom="16dp" />

        <EditText
            android:id="@+id/etCardholderName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_cardholder_name"
            android:inputType="textPersonName"
            android:padding="10dp"
            android:textColor="@color/tealBlue"
            android:hintTextColor="@color/gray"
            android:background="@drawable/edittext_border"
            android:layout_marginBottom="12dp" />

        <EditText
            android:id="@+id/etCardNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_card_number"
            android:inputType="number"
            android:padding="10dp"
            android:textColor="@color/tealBlue"
            android:hintTextColor="@color/gray"
            android:background="@drawable/edittext_border"
            android:layout_marginBottom="12dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <EditText
                android:id="@+id/etExpiryMonth"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="@string/hint_expiry_month"
                android:inputType="number"
                android:padding="10dp"
                android:textColor="@color/tealBlue"
                android:hintTextColor="@color/gray"
                android:background="@drawable/edittext_border"
                android:layout_marginEnd="8dp" />

            <EditText
                android:id="@+id/etExpiryYear"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="@string/hint_expiry_year"
                android:inputType="number"
                android:padding="10dp"
                android:textColor="@color/tealBlue"
                android:hintTextColor="@color/gray"
                android:background="@drawable/edittext_border" />
        </LinearLayout>

        <EditText
            android:id="@+id/etCVV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_cvv"
            android:inputType="numberPassword"
            android:padding="10dp"
            android:textColor="@color/tealBlue"
            android:hintTextColor="@color/gray"
            android:background="@drawable/edittext_border"
            android:layout_marginBottom="12dp" />

        <EditText
            android:id="@+id/etBillingAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_billing_address"
            android:inputType="textPostalAddress"
            android:padding="10dp"
            android:textColor="@color/tealBlue"
            android:hintTextColor="@color/gray"
            android:background="@drawable/edittext_border"
            android:layout_marginBottom="12dp" />

        <EditText
            android:id="@+id/etEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter your email"
            android:inputType="textEmailAddress"
            android:padding="10dp"
            android:textColor="@color/tealBlue"
            android:hintTextColor="@color/gray"
            android:background="@drawable/edittext_border"
            android:layout_marginBottom="12dp"
            android:visibility="visible" />

        <Button
            android:id="@+id/btnSubmitPayment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/btn_submit_payment"
            android:backgroundTint="@color/primary"
            android:textColor="@android:color/white"
            android:padding="12dp"
            android:layout_marginTop="20dp" />
    </LinearLayout>
</ScrollView>


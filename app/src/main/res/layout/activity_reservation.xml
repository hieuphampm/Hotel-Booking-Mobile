<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FDF6FF"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="15dp">

        <TextView
            android:id="@+id/reservation_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reservation Details"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#4A4A4A"
            android:gravity="center"
            android:layout_marginBottom="24dp"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/room_name_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Room Name:"
            android:textSize="16sp"
            android:textColor="#4A4A4A"
            android:layout_marginBottom="8dp"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/room_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_border"
            android:padding="12dp"
            android:text="No Room Selected"
            android:textSize="16sp"
            android:textColor="#616161"
            android:layout_marginBottom="16dp"
            tools:ignore="HardcodedText" />

        <android.widget.Button
            android:id="@+id/select_room_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/hover_btn"
            android:text="Select Room"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:layout_marginBottom="16dp"
            tools:ignore="HardcodedText" />

        <EditText
            android:id="@+id/guest_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autofillHints=""
            android:hint="Enter your name"
            android:padding="12dp"
            android:background="@drawable/rounded_border"
            android:textColor="#4A4A4A"
            android:textColorHint="#9E9E9E"
            android:layout_marginBottom="16dp"
            tools:ignore="HardcodedText,TextFields" />

        <TextView
            android:id="@+id/start_date_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Start Date:"
            android:textSize="16sp"
            android:textColor="#4A4A4A"
            android:layout_marginBottom="8dp"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/start_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_border"
            android:padding="12dp"
            android:text="Select Start Date"
            android:textSize="16sp"
            android:textColor="#616161"
            android:layout_marginBottom="16dp"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/end_date_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="End Date:"
            android:textSize="16sp"
            android:textColor="#4A4A4A"
            android:layout_marginBottom="8dp"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/end_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_border"
            android:padding="12dp"
            android:text="Select End Date"
            android:textSize="16sp"
            android:textColor="#616161"
            android:layout_marginBottom="16dp"
            tools:ignore="HardcodedText" />

        <android.widget.Button
            android:id="@+id/confirm_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/hover_btn"
            android:text="Confirm Reservation"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:layout_marginBottom="16dp"
            tools:ignore="HardcodedText" />

    </LinearLayout>
</ScrollView>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FDF6FF"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="15dp">

        <TextView
            android:id="@+id/reservation_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reservation Details"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#4A4A4A"
            android:gravity="center"
            android:layout_marginBottom="24dp" />

        <TextView
            android:id="@+id/room_name_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Room Name:"
            android:textSize="16sp"
            android:textColor="#4A4A4A"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/room_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_border"
            android:padding="12dp"
            android:text="Deluxe Room"
            android:textSize="16sp"
            android:textColor="#616161"
            android:layout_marginBottom="16dp" />

        <EditText
            android:id="@+id/guest_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter your name"
            android:padding="12dp"
            android:background="@drawable/rounded_border"
            android:textColor="#4A4A4A"
            android:textColorHint="#9E9E9E"
            android:layout_marginBottom="16dp" />

        <TextView
            android:id="@+id/date_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Reservation Date:"
            android:textSize="16sp"
            android:textColor="#4A4A4A"
            android:layout_marginBottom="8dp" />

        <android.widget.Button
            android:id="@+id/btn_signup"
            style="?android:attr/buttonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="18dp"
            android:background="@drawable/hover_btn"
            android:text="Select "
            android:textColor="#FFFFFF"
            android:textSize="15sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/time_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Reservation Time:"
            android:textSize="16sp"
            android:textColor="#4A4A4A"
            android:layout_marginBottom="10dp" />

        <android.widget.Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/hover_btn"
            android:text="Select Time"
            android:textSize="15sp"
            android:textStyle="normal"
            android:textColor="@color/white" />

    </LinearLayout>
</ScrollView>
